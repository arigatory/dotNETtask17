<Window x:Class="dotNETtask17.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNETtask17"
        d:DataContext="{d:DesignInstance viewModels:BookViewModel}"
        xmlns:viewModels="clr-namespace:dotNETtask17.ViewModels"
        xmlns:converters="clr-namespace:dotNETtask17.Views.Converters"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Window.Resources>
        <converters:NewBookConverter x:Key="newBookConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <MenuItem Header="Файл">
                <MenuItem Header="Загрузить"/>
                <MenuItem Header="Сохранить" Command="{Binding SaveCommand}"/>
                <MenuItem Header="Выйти" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="Правка">
                <MenuItem Header="Добавить автора"/>
                <MenuItem Header="Добавить книгу" Command="{Binding AddBookCommand}"/>
                <MenuItem Header="Удалить книгу" Command="{Binding DeleteBookCommand}"/>
            </MenuItem>
        </Menu>
        <ListView Grid.Row="1" Grid.Column="0" ItemsSource="{Binding Path=Books}" SelectedItem="{Binding CurrentBook}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Path=Title}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
        
        
        <Grid Grid.Row="1" Grid.Column="1" Margin="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="3">Название</TextBlock>
            <TextBox   Grid.Row="0" Grid.Column="1" 
                       VerticalAlignment="Stretch" Margin="3" Text="{Binding Path=CurrentBook.Title}" 
                       TextWrapping="Wrap"></TextBox>
            
            <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="3">Авторы</TextBlock>
            <ListBox   Name="lb" Grid.Row="1" Grid.Column="1" VerticalAlignment="Stretch"  Margin="3"
                       ItemsSource="{Binding Path=CurrentBook.Authors}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBox Text="       "/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <StackPanel Grid.Row="2" Grid.Column="0" VerticalAlignment="Bottom"  Margin="3" Orientation="Horizontal" Grid.ColumnSpan="2">
                <TextBlock VerticalAlignment="Center" Margin="3">Год издания</TextBlock>
                <TextBox MinWidth="100" Margin="3" Text="{Binding Path=CurrentBook.Year}"></TextBox>
                <TextBlock Foreground="Red" FontWeight="Bold" Margin="3" VerticalAlignment="Center" 
                           Text="{Binding CurrentBook.Year,Converter={StaticResource newBookConverter}}"/>
            </StackPanel>            
            
        </Grid>
        
        
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="3">
            <Button Margin="3" Padding="5" Command="{Binding AddBookCommand}">Добавить книгу</Button>
            <Button Margin="3" Padding="5" Command="{Binding DeleteBookCommand}">Удалить книгу</Button>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="3">
            <Button Margin="3" Padding="5">Добавить автора</Button>
            <Button Margin="3" Padding="5">Удалить автора</Button>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="3">
            <Button Margin="3" Padding="5">Загрузить</Button>
            <Button Margin="3" Padding="5" Command="{Binding SaveCommand}">Сохранить</Button>
            <Button Margin="3" Padding="5" Command="{Binding ExitCommand}">Выйти</Button>
        </StackPanel>
    </Grid>
</Window>
